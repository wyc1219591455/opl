<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.zhengjie.modules.opl.mapper.UserMapper">

    <resultMap id="userMap" type="me.zhengjie.modules.opl.domain.User">
        <id property="id" column="user_id"></id>
        <result property="userName" column="username"></result>
        <result property="name" column="nick_name"></result>
    </resultMap>

    <select id="findIdByUsername" resultType="java.lang.Long">
        select sys_user.user_id from sys_user where username=#{username}
    </select>

    <select id="findUser" resultType="me.zhengjie.modules.opl.domain.User">
        select user_id,username,nick_name from sys_user
        <if test="userName!=null and userName!=''">
            and username = #{userName}
        </if>
        <if test="name!=null and name!=''">
            and nick_name = #{name}
        </if>
    </select>


</mapper>
